{
  "services": {
    "api_gateway": {
      "host": "api_gateway",
      "port": 5000,
      "health_endpoint": "/health",
      "metadata": {
        "description": "API Gateway service",
        "roles": ["gateway", "router", "authentication"],
        "external": true
      }
    },
    "auth_service": {
      "host": "auth_service",
      "port": 5001,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Authentication service",
        "roles": ["authentication", "authorization"],
        "external": false
      }
    },
    "user_service": {
      "host": "user_service",
      "port": 5002,
      "health_endpoint": "/health",
      "metadata": {
        "description": "User management service",
        "roles": ["users", "profiles"],
        "external": false
      }
    },
    "oauth_service": {
      "host": "oauth_service",
      "port": 5003,
      "health_endpoint": "/health",
      "metadata": {
        "description": "OAuth integration service",
        "roles": ["oauth", "third-party-auth"],
        "external": false
      }
    },
    "chat_service": {
      "host": "chat_service",
      "port": 5004,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Chat functionality service",
        "roles": ["chat", "messaging"],
        "external": false
      }
    },
    "realtime_service": {
      "host": "realtime_service",
      "port": 5006,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Realtime WebSocket service",
        "roles": ["websocket", "realtime", "notifications"],
        "external": false
      }
    }
  }
} 