{
  "services": {
    "api_gateway": {
      "host": "localhost",
      "port": 5505,
      "health_endpoint": "/health",
      "metadata": {
        "description": "API Gateway service",
        "roles": ["gateway", "router", "authentication"],
        "external": true
      }
    },
    "auth_service": {
      "host": "localhost",
      "port": 5501,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Authentication service",
        "roles": ["authentication", "authorization"],
        "external": false
      }
    },
    "user_service": {
      "host": "localhost",
      "port": 5502,
      "health_endpoint": "/health",
      "metadata": {
        "description": "User management service",
        "roles": ["users", "profiles"],
        "external": false
      }
    },
    "oauth_service": {
      "host": "localhost",
      "port": 5503,
      "health_endpoint": "/health",
      "metadata": {
        "description": "OAuth integration service",
        "roles": ["oauth", "third-party-auth"],
        "external": false
      }
    },
    "chat_service": {
      "host": "localhost",
      "port": 5504,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Chat functionality service",
        "roles": ["chat", "messaging"],
        "external": false
      }
    },
    "realtime_service": {
      "host": "localhost",
      "port": 5506,
      "health_endpoint": "/health",
      "metadata": {
        "description": "Realtime WebSocket service",
        "roles": ["websocket", "realtime", "notifications"],
        "external": false
      }
    }
  }
} 